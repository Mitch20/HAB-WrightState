a = arduino('com','uno','Libraries','Servo');

s = servo(a,'D4','MinPulseDuration',700*10^-6,'MaxPulseDuration',2300*10-6);

for length = 0:0.2:1
    writePosition(s, length);
    current_pos = readPosition(s);
   
    fprintf('Current Actuator Length is %d inches\n', current_pos);
    pause(2)
    
end
 
for length = 1:0.2:0
    writePosition(s, length);
    current_pos = readPosition(s);
    
    fprintf('Current Actuator Length is %d inches\n', current_pos);
    pause(2)
    
end

% I am not exactly sure if this code will work for a linear actuator or not
